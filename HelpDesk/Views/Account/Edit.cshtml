 @{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model HelpDesk.Models.ViewModels.AccountViewModel

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">

               @if (ViewBag.msg != null)
               {
                   if (ViewBag.msg == "Done")
                   {
                    <div class="callout callout-success">
                         <h4>Successful</h4>
                         </div>
                   }
                   else
                   {
                     <div class="callout callout-danger">
                         <h4>Failed</h4>
                      </div>
                   }

               }

                <!-- general form elements -->

<section class="content-header">
                    <h1>

                    </h1>
                    <ol class="breadcrumb float-sm-right">
                        <li><a asp-controller="dashboard" asp-action="index"><i class="fa fa-dashboard"></i>Home</a></li>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <li><a href="#">Edit Account </a></li>
                    </ol>

                </section>

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit ACCOUNT</h3>
                    </div>

                    <!-- /.card-header -->


                    <!-- form start -->
                    <form asp-controller="account" asp-action="edit" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="UserName">Username</label>
                                <input type="text" class="form-control" id="UserName" required="required" asp-for="Account.UserName">
                            </div>

                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" asp-for="Account.Password">
                            </div>

                            <div class="form-group">
                                <label for="FullName">Full Name</label>
                                <input type="text" class="form-control" id="FullName" required="required" asp-for="Account.FullName">
                            </div>

                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" required="required" asp-for="Account.Email">
                            </div>

                            <div class="checkbox">
                                <label>
                                <input type="checkbox" asp-for="Account.Status">
                                Status</label>
                            </div>

                            <div class="form-group">
                                <label>Role</label>
                                <select class="form-control" asp-for="Account.RoleId" asp-items="@Model.Roles">
                                </select>
                            </div>



                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="Account.Id" />
                           </div>
                    </form>
                </div>

