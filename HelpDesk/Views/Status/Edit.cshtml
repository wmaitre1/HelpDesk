 @{
    ViewData["Title"] = "Edit Status";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model HelpDesk.Models.Status

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">

               @if (ViewBag.msg != null)
               {
                   if (ViewBag.msg == "Done")
                   {
                    <div class="callout callout-success">
                         <h4>Successful</h4>
                         </div>
                   }
                   else
                   {
                     <div class="callout callout-danger">
                         <h4>Failed</h4>
                      </div>
                   }

               }

                <!-- general form elements -->

<section class="content-header">
                    <h1>

                    </h1>
                    <ol class="breadcrumb float-sm-right">
                        <li><a asp-controller="dashboard" asp-action="index"><i class="fa fa-dashboard"></i>Home</a></li>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <li><a href="#">EDIT Status </a></li>
                    </ol>

                </section>

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">EDIT STATUS</h3>
                    </div>

                    <!-- /.card-header -->


                    <!-- form start -->
                    <form asp-controller="status" asp-action="edit" method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label for="UserName">Name</label>
                                <input type="text" class="form-control" id="UserName" required="required" asp-for="Name">
                            </div>

                            <div class="form-group">
                                <label>Color</label>
                                <select class="form-control" asp-for="Color">
                                    <option value="success">Completed</option>
                                    <option value="success">Approved</option>
                                    <option value="warning">Pending</option>
                                    <option value="danger">Not Approved</option>
                                    <option value="info">In Review</option>
                                </select>
                            </div>

                            <div class="checkbox">
                                <label>
                                <input type="checkbox" asp-for="Display">
                                Status</label>
                            </div>

                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="Id" />
                           </div>
                    </form>
                </div>

